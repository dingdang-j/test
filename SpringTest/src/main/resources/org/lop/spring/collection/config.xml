<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:task="http://www.springframework.org/schema/task"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/task http://www.springframework.org/schema/task/spring-task-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

	<bean id="listBean" class="org.lop.spring.collection.ListBean">
		<property name="param">
			<list>
				<value>1</value>
				<value>3</value>
				<value>5</value>
				<value>7</value>
			</list>
		</property>
	</bean>

	<bean id="setBean" class="org.lop.spring.collection.SetBean">
		<property name="param">
			<set>
				<value>B1</value>
				<value>B3</value>
				<value>B1</value>
				<value>B7</value>
			</set>
		</property>
	</bean>

	<bean id="mapBean" class="org.lop.spring.collection.MapBean">
		<property name="param">
			<map>
				<entry key="a" value="a_value" />
				<entry key="b" value="b_value" />
				<entry key="c" value="c_value" />
				<entry key="d" value="d_value" />
			</map>
		</property>
	</bean>

	<bean id="propertiesBean" class="org.lop.spring.collection.PropertiesBean">
		<property name="param">
			<props>
				<prop key="a">a_value</prop>
				<prop key="b">b_value</prop>
				<prop key="c">c_value</prop>
				<prop key="d">d_value</prop>
			</props>
		</property>
	</bean>

</beans>